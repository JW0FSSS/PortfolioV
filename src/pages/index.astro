---

import Layout from '../layouts/Layout.astro';
import Linkedin from '../icons/linkedin.astro'
import Button from '../components/Button.astro'
import Github from '../icons/Github.astro'
import Download from '../icons/cv.astro'
import Projects from '../components/Projects.astro';
import Tecnologies from '../components/Tecnologies.astro';
import TecnologiesDown from "../components/TecnologiesDown.astro";
---

<Layout title="Portafolio de Desarrollador Backend">
	<main >
			<section class="w-full lg:w-[900px] px-10 rounded-3xl mx-auto flex lg:flex-row flex-col gap-5 lg:py-44 items-center justify-center py-4">
			<div class="order-2 ">

				<h1 class="text-3xl lg:text-5xl flex gap-x-10 my-2  py-5 text-center lg:text-left">Soy Jose, Desarrollador Web</h1>
				
				<h2 class="text-lg lg:text-2xl py-7 text-center lg:text-left">Desarrollador web, encofado en tecnologias nuevas y mentalizado en seguir aprendiendo</h2>
				<div class="flex gap-x-2 lg:gap-x-4 pt-2 justify-center lg:justify-start">
					<Button href="https://www.linkedin.com/in/joseback"><Linkedin></Linkedin>Linkedin</Button>
					<Button href="https://github.com/JW0FSSS"><Github></Github>Github</Button>
					<Button href="JoseCV.pdf" download="JoseCV" color="border-green-500"><Download></Download>Download</Button>
				</div>
			</div>
			
			<img class="w-64 order-1 lg:order-3 rounded-full shadow-xl" src="https://res.cloudinary.com/djkmyxefd/image/upload/v1712775613/fotos/unnamed_yyx3ky.jpg" alt="">
		</section>


		<section class="w-full lg:w-[900px] px-10 overflow-hidden my-2 rounded-3xl mx-auto py-48 lg:py-72 h-full flex flex-col gap-10 items-center justify-center" id="Tecnologies">

			<h1 class="text-5xl text-bold mb-10">technologies</h1>

			<Tecnologies/>
			<TecnologiesDown/>
			
		</section>
		
		<section class="w-full lg:w-[900px]  px-10  my-2 rounded-3xl mx-auto flex flex-col gap-5 items-center lg:py-8 py-4 justify-center " id="Proyects">
			
			<h1 class="text-5xl text-bold my-10">Projects</h1>
			<div class="grid lg:grid-cols-6 grid-cols-1 gap-5 ">
				
				<Projects/>

			</div>

		</section>
	</main>
</Layout>

