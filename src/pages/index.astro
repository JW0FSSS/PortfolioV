---

import Layout from '../layouts/Layout.astro';
import Linkedin from '../icons/linkedin.astro'
import Button from '../components/Button.astro'
import Github from '../icons/Github.astro'
import Download from '../icons/cv.astro'
import Projects from '../components/Projects.astro';
import Tecnologies from '../components/Tecnologies.astro';

---

<Layout title="Portafolio de Desarrollador Backend">
	<main>
		<section class="w-full lg:w-[900px] mx-auto flex gap-x-10 h-screen items-center">
			<div class="relative -top-32">

				<h1 class="text-5xl flex gap-x-10 py-5">Soy Jose, Desarrollador Web</h1>
				
				<h2 class="text-2xl py-5">Desarrollador web, encofado en tecnologias nuevas</h2>
				<div class="flex gap-x-4 pt-2">
					<Button href="https://www.linkedin.com/in/joseback"><Linkedin></Linkedin>Linkedin</Button>
					<Button href="https://github.com/JW0FSSS"><Github></Github>Github</Button>
					<Button href="JoseCV.pdf" download="JoseCV" color="border-green-500"><Download></Download>Download</Button>
				</div>
			</div>
			
			<img class="w-72 relative -top-44" src="https://www.seekpng.com/png/full/935-9358226_desenho-de-lobo-png-illustration.png" alt="">
		</section>

		<section class="w-full lg:w-[900px] mx-auto h-screen flex flex-col gap-10 items-center justify-center" id="Tecnologies">

			<h1 class="text-5xl text-bold mb-10">technologies</h1>

			<Tecnologies></Tecnologies>
			
		</section>
		
		<section class="w-full lg:w-[900px] mx-auto flex flex-col gap-5 items-center justify-center " id="Proyects">
			
			<h1 class="text-5xl text-bold my-10">Projects</h1>
			<div class="grid grid-cols-2 gap-5">
				
				<Projects></Projects>

			</div>

		</section>
	</main>
</Layout>

