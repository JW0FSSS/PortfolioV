        <a href={project.gitgub} target="_blank" rel="noopener noreferrer">
            <div class="w-11/12 mx-auto">
                <img src={project.image} alt="Captura del proyecto"  class="rounded-xl w-full object-cover"/>
            </div>
            <div class="w-11/12 mx-auto">
                <h1 class="my-2 text-xl ">{project.title}</h1>
                <p class="my-2">{project.description}</p>
                <div class="flex gap-x-3">
                    {project.tags.map(tag => (
                        <img src={`${tag.image}`} alt="" class="rounded-full w-10 lg:w-12 object-cover"/>
                        ))}
            </div>
            </div>
