---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// Supports weights 100-700
import '@fontsource-variable/roboto-mono';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://lh3.googleusercontent.com/ogw/AF2bZyjZ-JS05E-AAhSoFGrcQxVButQraBPqctoxuG5RQQ=s32-c-mo" class="rounded-full overflow-hidden"/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-black/80  h-full">
		<Header/>
		<slot />
		<Footer href="dstryr77@gmail.com"/>
	</body>
</html>
<style is:global>
	body{
		background-color: white;
	}
	html {
		font-family: "Roboto Mono Variable",system-ui, sans-serif;	
		scroll-behavior: smooth;
	}
	#header{
		animation: BlurEffect auto linear both;
		animation-timeline: scroll(root);
		animation-range: 0 500px;
	}

	label~input:checked~nav{
		top: 0;
	}
	label~input:checked~#cancel{
		display: block;
		z-index: 50;
	}

	.logos::before,
	.logos::after{
		position: absolute;
		top: 0;
		width: 120px;
		height: 100%;
		z-index: 50;
		content: '';
	}
	.logos::after{
		right: 0;
		background: linear-gradient(to right, rgba(255,255,255,0),white);
	}

	.logos::before{
		left: 0;
		background: linear-gradient(to left, rgba(255,255,255,0),white);
	}

	#animation{
		animation: 5s slide infinite linear;
	}

	#animation2{
		animation: 5s slide2 infinite linear;
	}

	@keyframes BlurEffect {
		to{
			background-color: rgba(238, 231, 231, 0.5);
			backdrop-filter: blur(5px);	
		}
		
	}

	@keyframes slide{
		from{
			transform: translateX(0);
		}	
		to{
			transform: translateX(-100%);
		}
	}

	@keyframes slide2{
		from{
			transform: translateX(-100%);
		}	
		to{
			transform: translateX(0);
		}
	}
	
</style>
